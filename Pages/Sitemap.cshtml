@page "/sitemap.xml"
@model SitemapModel
@using simplecybertech.Models;
<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <!-- Homepage -->
    <url>
        <loc>https://www.simplecybertech.com/</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>weekly</changefreq>
        <priority>1.0</priority>
    </url>

    <!-- Main Pages -->
    <url>
        <loc>https://www.simplecybertech.com/about-us</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/services-overview</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.9</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/contact-us</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/faq</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/glossary</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.7</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/privacy-policy</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.5</priority>
    </url>

    <url>
        <loc>https://www.simplecybertech.com/terms-of-service</loc>
        <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
        <changefreq>yearly</changefreq>
        <priority>0.5</priority>
    </url>

    <!-- Dynamic City Service Pages -->
    @foreach (var city in Model.Cities)
    {
        <url>
            <loc>https://www.simplecybertech.com/services/@city.Slug</loc>
            <lastmod>@DateTime.Now.ToString("yyyy-MM-dd")</lastmod>
            <changefreq>monthly</changefreq>
            <priority>0.7</priority>
        </url>
    }
</urlset>
