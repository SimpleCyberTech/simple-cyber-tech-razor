@using simplecybertech.Services;
@inject ISchemaService SchemaService;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@(ViewData["MetaDescription"]?.ToString() ?? "Simple Cyber Technology is a leading provider of cybersecurity services, dedicated to protecting businesses from cyber threats with innovative solutions and expert support.")" />
    <meta name="keywords" content="Cybersecurity, Cyber Protection, Data Security, Network Security, Cyber Threats, IT Security, Cyber Defense, Simple Cyber Technology" />
    <meta name="author" content="Simple Cyber Technology" />
    <title>@ViewData["Title"] | Simple Cyber Technology</title>
    
    @* Canonical Tag for SEO *@
    <link rel="canonical" href="https://www.simplecybertech.com@Context.Request.Path" />
    
    @* Open Graph Tags for Social Media *@
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@(ViewData["Title"]?.ToString() ?? "Simple Cyber Technology - Cybersecurity Services for Southern California")" />
    <meta property="og:description" content="@(ViewData["MetaDescription"]?.ToString() ?? "Simple Cyber Technology is a leading provider of cybersecurity services, dedicated to protecting businesses from cyber threats with innovative solutions and expert support.")" />
    <meta property="og:url" content="https://www.simplecybertech.com@Context.Request.Path" />
    <meta property="og:image" content="https://www.simplecybertech.com/img/logo-company-name-horizontal-dark.png" />
    <meta property="og:site_name" content="Simple Cyber Technology" />
    
    @* Twitter Card Tags *@
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(ViewData["Title"]?.ToString() ?? "Simple Cyber Technology - Cybersecurity Services for Southern California")" />
    <meta name="twitter:description" content="@(ViewData["MetaDescription"]?.ToString() ?? "Simple Cyber Technology is a leading provider of cybersecurity services, dedicated to protecting businesses from cyber threats with innovative solutions and expert support.")" />
    <meta name="twitter:image" content="https://www.simplecybertech.com/img/logo-company-name-horizontal-dark.png" />
    
    @* 1. Render Global Business & Website Schema *@
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetGlobalSchema())
    </script>

    @* 2. Placeholder for Page-Specific Schema (Breadcrumbs, Services, etc.) *@
    @if (IsSectionDefined("PageSchema"))
    {
        @RenderSection("PageSchema", required: false)
    }

    <script type="importmap"></script>
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleCyberTech.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&family=Oswald:wght@400;600;700&family=Raleway:ital,wght@0,400;0,600;0,900;1,400;1,600&display=swap" rel="stylesheet">

    <!-- Google Tag Manager -->
    <script async>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-MSH8HFZ7');</script>
    <!-- End Google Tag Manager -->
</head>
<body class="font-roboto-regular">
    <!-- Accessibility: Skip to main content link -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MSH8HFZ7"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <header class="sticky-top">
        <nav class="navbar navbar-expand-xl navbar-toggleable-xl navbar-dark px-3" aria-label="Main navigation">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index"><img src="/img/logo-company-name-horizontal-dark.png" alt="Simple Cyber Technology - Home" class="navbar-logo" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center fs-5" id="navbarNav">
                    <ul class="navbar-nav pt-5 pt-xl-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/about-us">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/services-overview">Our Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact-us">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/faq">FAQ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/glossary">Glossary</a>
                        </li>
                        <li class="nav-item d-xl-none">
                            <a href="/contact#ContactSection">
                                <button class="w-100 py-3 my-5" style="max-width: 500px;">Schedule a Call</button>
                            </a>
                        </li>
                    </ul>
                </div>
                <a href="/contact#ContactSection" class="d-none d-xl-block">
                    <button class="fs-6 px-3 py-2">Schedule a Call</button>
                </a>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-0">
        <main role="main" id="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" role="contentinfo">
        <div class="footer-top">
            <div class="container row justify-content-between mx-auto">
                <div class="col-auto mb-3 order-lg-2">
                    <h4 class="pb-3">Company Info</h4>
                    <ul class="list-unstyled">
                        <li>949 South Coast Drive, Suite 280</li>
                        <li>Costa Mesa, CA 92626</li>
                        <li><a href="tel:9495206805">(949) 520-6805</a></li>
                        <br />
                        <li>Mon-Fri: 8am - 6pm (PST)</li>
                        <li>Sat-Sun: Closed</li>
                    </ul>
                </div>
                <div class="col-auto mb-3 order-lg-3">
                    <h4 class="pb-3">Quick Links</h4>
                    <ul class="list-unstyled">
                        <li><a href="/faq" class="">FAQ</a></li>
                        <li><a href="/glossary" class="">Glossary</a></li>
                        <li><a href="/index" class="">Home</a></li>
                        <li><a href="/services-overview" class="">Services</a></li>
                        <li><a href="/about-us" class="">About Us</a></li>
                        <li><a href="/contact-us" class="">Contact</a></li>
                        <li><a href="/privacy-policy" class="">Privacy Policy</a></li>
                        <li><a href="/terms-of-service" class="">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-auto mx-auto mx-xl-0 order-lg-1">
                    <div class="mb-4"><img src="/img/logo-company-name-horizontal-dark.png" alt="Simple Cyber Tech Logo" class="footer-logo img-fluid" loading="lazy"/></div>
                    <ul class="list-inline d-flex justify-content-between">
                        <li class="list-inline-item">
                            <a href="https://www.linkedin.com/company/simplecybertech/" target="_blank" rel="noopener noreferrer" class="text-decoration-none d-flex align-items-center" aria-label="Visit Simple Cyber Technology on LinkedIn">
                                <img src="/img/social-linkedin-square.svg" alt="" width="35" height="35" class="footer-social-icon me-2" loading="lazy">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://twitter.com/simplecybertech" target="_blank" rel="noopener noreferrer" class="text-decoration-none d-flex align-items-center" aria-label="Visit Simple Cyber Technology on Twitter">
                                <img src="/img/social-twitter-square.svg" alt="" width="35" height="35" class="footer-social-icon me-2" loading="lazy" />
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.facebook.com/simplecybertech" target="_blank" rel="noopener noreferrer" class="text-decoration-none d-flex align-items-center" aria-label="Visit Simple Cyber Technology on Facebook">
                                <img src="/img/social-facebook-square.svg" alt="" width="35" height="35" class="footer-social-icon me-2" loading="lazy" />
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.instagram.com/simplecybertech" target="_blank" rel="noopener noreferrer" class="text-decoration-none d-flex align-items-center" aria-label="Visit Simple Cyber Technology on Instagram">
                                <img src="/img/social-instagram-square.svg" alt="" width="35" height="35" class="footer-social-icon me-2" loading="lazy" />
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="https://www.youtube.com/@@simplecybertech" target="_blank" rel="noopener noreferrer" class="text-decoration-none d-flex align-items-center" aria-label="Visit Simple Cyber Technology on YouTube">
                                <img src="/img/social-youtube-square.svg" alt="" width="35" height="35" class="footer-social-icon me-2" loading="lazy" />
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container text-center py-3">
            &copy; 2026 Simple Cyber Technology.  All rights reserved.
        </div>
    </footer>

    <script defer src="~/lib/jquery/dist/jquery.min.js"></script>
    <script defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script defer src="~/js/site.js" asp-append-version="true"></script>
    <script async src="https://kit.fontawesome.com/b110dd7c85.js" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
