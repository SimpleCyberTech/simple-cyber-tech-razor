@page
@model ContactModel
@using simplecybertech.Services;
@inject ISchemaService SchemaService;

@{
    ViewData["Title"] = "Contact Us";
    ViewData["MetaDescription"] = "Get in touch with Simple Cyber Technology in Costa Mesa, CA. Schedule a security review or call (949) 520-6805 for immediate cybersecurity assistance.";
}

<section id="HeroSection">
    <video autoplay muted loop playsinline preload="none" aria-label="Contact us hero background video">
        <source src="/video/contact-us-hero-section.mp4" type="video/mp4" />
    </video>
    <div class="video-overlay" aria-hidden="true"></div>
    <div class="max-w-7xl mx-auto hero-jumbotron">
        <h1 class="uppercase mb-4">We Are Here to Help</h1>
        <h3 class="italic my-4">Finding the right cybersecurity solution for your business is tough. Get more info about how we can help you.</h3>
    </div>
</section>

<div id="MainContent" class="parallax-group bg-[url('/img/background_2.webp')]">
    <div class="parallax-opacity" aria-hidden="true"></div>
    <section id="ContactSection" class="max-w-7xl mx-auto px-4">
        <div class="glass-panel text-center p-4 md:p-12 my-12">
            <h2>Get In Touch With Us</h2>
            <p>Please use our calendar widget to book a free call with a specialist. Find out about our different services or bring any questions that you may have. If you want to reach us immediately or have an urgent matter, please call us at (949) 520-6805.</p>
            <div class="flex justify-center my-4">
                <iframe 
                    src="https://api.leadconnectorhq.com/widget/booking/KBeG8jBiHmtmZmvXSrQv" 
                    style="width: 100%; border:none; overflow: hidden;" 
                    scrolling="no" 
                    id="KBeG8jBiHmtmZmvXSrQv_1769558186400">
                </iframe>
            </div>
        </div>
    </section>
</div>



<!-- Javascript for Msgsndr form embed -->
<script src="https://link.msgsndr.com/js/form_embed.js" type="text/javascript"></script>

<!-- Page Schema section -->
@section PageSchema {
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetBreadcrumbSchema("Contact Us", "/contact-us"))
    </script>
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetContactPageSchema())
    </script>
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetLocalBusinessSchema())
    </script>
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetWebPageSchema("Contact Us - Simple Cyber Technology", "Get in touch with our Southern California-based cybersecurity team. Schedule a security review or call us at (949) 520-6805 for immediate assistance."))
    </script>
}
