@page
@model GlossaryModel
@using simplecybertech.Services;
@inject ISchemaService SchemaService;

@{
    ViewData["Title"] = "Cybersecurity Glossary";
    ViewData["MetaDescription"] = "Glossary of cybersecurity, IT security, and technology terms. Clear definitions for small business owners and decision-makers. Learn key security concepts from Simple Cyber Technology.";
}

<section id="HeroSection">
    <div class="container hero-jumbotron">
        <h1 class="text-uppercase mb-3">Cybersecurity Glossary</h1>
        <h3 class="fst-italic my-3">Plain-English explanations of cybersecurity and IT terms, so you can understand your security better.</h3>
    </div>
</section>

<div id="MainContent" class="parallax-group parallax-bg py-5">
    <div class="parallax-opacity" aria-hidden="true"></div>
    <section id="GlossaryNavigation" class="container">
        <div class="glass-panel p-3 p-md-5">
            <p class="text-center pb-5">Cybersecurity can be intimidating with all the technical jargon. This glossary explains key security and IT terms in plain English. Select a letter below to jump to terms starting with that letter.</p>

            <div class="row g-2 justify-content-center">
                @foreach (var letter in Model.TermsByLetter.Keys)
                {
                    <div class="col-auto">
                        <a href="#letter-@letter" class="btn btn-sm btn-outline-primary">@letter</a>
                    </div>
                }
            </div>
        </div>
    </section>

    <section id="GlossaryContent" class="container">
        @foreach (var letterGroup in Model.TermsByLetter)
        {
            <div class="glass-panel p-3 p-md-5 my-3 my-md-5" id="letter-@letterGroup.Key">
                <h2 class="glossary-letter">@letterGroup.Key</h2>
                @foreach (var term in letterGroup.Value)
                {
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">@term.Term</h4>
                            <p class="card-text">@term.Definition</p>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
        
    <section id="GlossaryContact" class="container mb-5">
        <div class="glass-panel p-4">
            <h2>Still Need Clarification?</h2>
            <p class="py-3">Don't see a term you're looking for? Want to discuss how these concepts apply to your business? Our team can explain cybersecurity in a way that makes sense to you.</p>
            <p><a href="/contact-us"><button class="button">Get in Touch</button></a></p>
        </div>
    </section>
</div>




<!-- Page Schema section -->
@section PageSchema {
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetBreadcrumbSchema("Glossary", "/glossary"))
    </script>
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetWebPageSchema("Cybersecurity & IT Glossary", "A comprehensive glossary of cybersecurity, network security, and IT terms explained in plain language for small and medium-sized business owners."))
    </script>
    <script type="application/ld+json">
        @Html.Raw(SchemaService.GetGlossarySchema(Model.GlossaryTerms))
    </script>
}
